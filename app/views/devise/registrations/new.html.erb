<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Your email" %>
      </div>
      <div class="field">
        <%= f.text_field :name, placeholder: "Your name" %>
      </div>
      <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Create a password", title:  "#{@minimum_password_length} characters minimum" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
      </div>
      <div class="field">
        <%= f.text_field :tumblr_url, placeholder: "Your tumblr url", title: "e.g. thatsillynostalgia.tumblr.com" %>
      </div>
      <div class="field">
        <%= f.text_field :twitter_name, placeholder: "Your twitter username" %>
      </div>
  </fieldset>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
